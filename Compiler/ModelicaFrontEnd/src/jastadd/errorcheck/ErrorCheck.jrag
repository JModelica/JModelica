    eq InstComponentDecl.getChild().myTargetComponent()         = this;
    eq InstNode.getChild().myTargetComponent()                  = unknownInstComponentDecl();
    eq InstRecordConstructor.getChild().myTargetComponent()     = unknownInstComponentDecl();

